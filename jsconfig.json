{
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "target": "es2020",
    "module": "ESNext",
    "checkJs": true,
    "jsx": "react",
    "types": [
      "vite/client",
      "cypress",
      "@testing-library/cypress"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "cypress/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}